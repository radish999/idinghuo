{
  "name": "@idinghuo/ui",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "tailwind.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.css",
    "dev": "concurrently \"tsup src/index.ts --format cjs,esm --dts --watch\" \"tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.css --watch\"",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@idinghuo/hooks": "workspace:*",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.0",
    "@mui/icons-material": "^5.14.0",
    "ethers": "^5.7.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.5",
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}